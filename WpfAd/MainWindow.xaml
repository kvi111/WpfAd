<Window x:Class="WpfAd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAd"
        mc:Ignorable="d"
        Title="MainWindow" Height="1920" Width="1080" WindowState="Maximized" WindowStyle="None" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Image Name="imgAd" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Stretch="Fill" MouseLeftButtonDown="ImgAd_MouseLeftButtonDown" IsManipulationEnabled="True" ManipulationStarted="ImgAd_ManipulationStarted" ManipulationCompleted="ImgAd_ManipulationCompleted" />
        <Image Name="imgLeft" VerticalAlignment="Center" HorizontalAlignment="Left" Height="130" Width="69" Margin="10,-200,0,0" Stretch="Fill" Source="/img/left.png"  MouseLeftButtonDown="ImgLeft_MouseLeftButtonDown"/>
        <Image Name="imgRight" VerticalAlignment="Center" HorizontalAlignment="Right" Height="130" Width="69" Margin="0,-200,10,0" Stretch="Fill" Source="/img/right.png"  MouseLeftButtonDown="ImgRight_MouseLeftButtonDown"/>
        <Image Name="imgSaleinfo" VerticalAlignment="Center" HorizontalAlignment="Right" Height="100" Width="100" Margin="0,-500,0,0" Stretch="Fill" Source="/img/sales_info.png"  MouseLeftButtonDown="ImgSaleinfo_MouseLeftButtonDown"/>
        <Image Name="imgAdinfo" VerticalAlignment="Center" HorizontalAlignment="Right" Height="100" Width="100" Margin="0,100,0,0" Stretch="Fill" Source="/img/ad_info.png"  MouseLeftButtonDown="ImgAdinfo_MouseLeftButtonDown"/>
        <Label Name="lblDebug" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0" Height="30" Width="100"  Background="Black" Foreground="White" Opacity="0.5" MouseLeftButtonDown="LblDebug_MouseLeftButtonDown"></Label>
    </Grid>
</Window>
